@model ContosoUniversity.Models.Course
@{
    ViewData["Title"] = Model.CourseID == 0 ? "Create Course" : "Edit Course";
}
<h1>@ViewBag.Title</h1>
<form asp-action="CreateEdit">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Credits)
        @Html.EditorFor(model => model.Credits, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
@if (Model.CourseID != 0)
{
    <a asp-action="Clone" asp-route-id="@Model.CourseID" class="btn btn-secondary">Clone</a>
}
