@model ContosoUniversity.Models.Delinquent

@{
    ViewData["Title"] = "Clone";
}
<h1>Clone</h1>

<div>
    <h4>Clone</h4>
    <hr />
    <div class="row">
        <form asp-action="Clone">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstMidName" class="control-label"></label>
                
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Violation" class="control-label"></label>
              
                <span asp-validation-for="Violation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Clone" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Edit" class="btn btn-warning" /> | <a asp-action="Index">Cancel</a>
</div>